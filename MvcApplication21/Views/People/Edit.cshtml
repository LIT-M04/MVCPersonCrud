@{
    Layout = null;
}

@model MvcApplication21.Models.Person

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>New</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row" style="margin-top: 40px;">
            <div class="col-md-6 col-md-offset-3 well">
                <form method="POST" action="/people/update">
                    <input type="text" name="firstName" placeholder="First Name" class="form-control" value="@Model.FirstName" />
                    <input type="text" name="lastName" placeholder="Last Name" class="form-control" value="@Model.LastName" />
                    <input type="text" name="age" placeholder="Age" class="form-control" value="@Model.Age"/>
                    <input type="hidden" name="id" value="@Model.Id"/>
                    <button class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
